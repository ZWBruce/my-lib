{
  "compilerOptions": {
    "target": "esnext",                               
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "outDir": "./output",
    "strict": true,        
    "types": ["node", "jest"],                    
    "esModuleInterop": true,                       
    "experimentalDecorators": true,              
    "emitDecoratorMetadata": true,              
    "skipLibCheck": true,                          
    "forceConsistentCasingInFileNames": true       
  }
}
